<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_UploadPicture"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="414dp"
        android:onClick="onClick"
        android:text="사진 선택"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/pic_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="242dp"
        android:layout_marginBottom="479dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200sp" />


    <EditText
        android:id="@+id/name"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/stroke"
        android:elevation="4dp"
        android:hint="이  름"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/caregiver_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="86dp"
        android:gravity="top"
        android:text="실명 입력"
        android:textSize="10sp" />

    <!-- 생년월일 작성 -->

    <EditText
        android:id="@+id/birth"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="178dp"
        android:background="@drawable/stroke"
        android:elevation="4dp"
        android:hint="생 년 월 일"
        android:textAlignment="center"
        android:textSize="20dp" />

    <!-- 아이디 만들기 -->

    <!-- 중복 확인 버튼 -->

    <EditText
        android:id="@+id/id_write"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="323dp"
        android:background="@drawable/stroke"
        android:elevation="4dp"
        android:hint="아 이 디"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/check_id"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_write"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:elevation="4dp"
        android:text="중복확인"
        android:textSize="11sp"
        android:textStyle="bold" />

    <!-- 비밀번호 만들기 -->

    <!-- 비밀번호 재확인 -->

    <EditText
        android:id="@+id/password_write"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_below="@+id/id_write"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/stroke"
        android:elevation="4dp"
        android:hint="비 밀 번 호\n대문자, 소문자, 숫자를 포함해 10~20자리"
        android:textAlignment="center"
        android:textSize="15sp" />

    <!-- 전화번호 입력 -->

    <!-- 인증 확인 버튼 -->


    <!-- 사진 선택 버튼 -->


    <!-- 다음 버튼 -->

    <EditText
        android:id="@+id/phonenumber_write"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phonenumber_write2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/stroke"
        android:elevation="4dp"
        android:hint="전 화 번 호"
        android:textAlignment="center"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/phonenumber_write2"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password_write"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/stroke"
        android:elevation="4dp"
        android:hint="이 메 일"
        android:textAlignment="center"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="489dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:onClick="onClick"
        android:src="@drawable/signup_button"
        tools:ignore="SpeakableTextPresentCheck" />


    <!-- 남자 체크 박스 -->

    <Button
        android:id="@+id/go_to_login"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="25dp"
        android:elevation="4dp"
        android:text="다 음"
        android:textSize="16dp" />

    <RadioGroup
        android:id="@+id/ckkmale"
        android:layout_width="181dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="372dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/female"
            android:layout_width="90dp"
            android:layout_height="60sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="461dp"
            android:text="여자"
            android:textStyle="bold">

        </RadioButton>

        <RadioButton
            android:id="@+id/male"
            android:layout_width="90dp"
            android:layout_height="60sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="455dp"
            android:text="남자"
            android:textStyle="bold">

        </RadioButton>

    </RadioGroup>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="299dp"
        android:layout_marginBottom="22dp"
        android:text="Back"
        android:textColor="#ffffff" />

</RelativeLayout>




